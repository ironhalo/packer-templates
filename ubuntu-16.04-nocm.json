{
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<enter><wait>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz ",
                "initrd=/install/initrd.gz ",
                "net.ifnames=0 ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04/preseed.cfg ",
                "<enter>"
            ],
            "boot_wait": "5s",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "Ubuntu_64",
            "headless": "{{user `headless`}}",
            "http_directory": "http",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_urls": [
		    "iso/ubuntu-16.04.1-server-amd64.iso",
		    "{{user `mirror`}}/16.04/ubuntu-16.04.1-server-amd64.iso"
	    ],
            "output_directory": "builds/output-ubuntu-16.04-amd64-{{build_type}}",
            "shutdown_command": "sudo systemctl poweroff",
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ]
            ],
            "vm_name": "ubuntu-16.04-amd64"
        },
        {
            "type": "vmware-iso",
            "boot_command": [
                "<enter><wait>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz ",
                "initrd=/install/initrd.gz ",
                "net.ifnames=0 ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04/preseed.cfg ",
                "<enter>"
            ],
            "boot_wait": "5s",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "ubuntu-64",
            "headless": "{{user `headless`}}",
            "http_directory": "http",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_urls": [
		    "iso/ubuntu-16.04.1-server-amd64.iso",
		    "{{user `mirror`}}/16.04/ubuntu-16.04.1-server-amd64.iso"
	    ],
            "output_directory": "builds/output-ubuntu-16.04-amd64-{{build_type}}",
            "shutdown_command": "sudo systemctl poweroff",
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "vm_name": "ubuntu-16.04-amd64",
            "vmx_data": {
                "memsize": "{{user `memory`}}",
                "numvcpus": "{{user `cpus`}}",
		"ethernet0.present": "true",
		"ethernet0.startConnected": "true",
                "ethernet0.virtualDev": "vmxnet3"
            }
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
	    "only": [ "virtualbox-iso" ],
            "compression_level": "{{user `compression_level`}}",
            "output": "builds/ubuntu-16.04-amd64-{{.Provider}}.box",
            "keep_input_artifact": false
        },
	{
            
            "type": "vsphere",
            "only": [ "vmware-iso" ],
            "cluster": "{{user `vsphere_cluster`}}",
            "datacenter": "{{user `vsphere_datacenter`}}",
            "datastore": "{{user `vsphere_datastore`}}",
            "host": "{{user `vsphere_host`}}",
            "username": "{{user `vsphere_username`}}",
            "password": "{{user `vsphere_password`}}",
            "vm_name": "{{user `vsphere_vm_name`}}",
            "disk_mode": "{{user `vsphere_disk_mode`}}",
            "vm_folder": "{{user `vsphere_vm_folder`}}",
	    "vm_network": "{{user `vsphere_vm_network`}}"
	}
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/common/vagrant.sh",
                "scripts/ubuntu-16.04/apt.sh",
                "scripts/ubuntu-16.04/common-packages.sh",
                "scripts/ubuntu-16.04/virtualization-packages.sh",
                "scripts/common/ssh-hostkey-cleanup.sh",
                "scripts/common/minimize.sh"
            ]
        }
    ],
    "variables": {
            "compression_level": "6",
            "cpus": "1",
            "disk_size": "20000",
            "headless": "false",
            "iso_checksum": "29a8b9009509b39d542ecb229787cdf48f05e739a932289de9e9858d7c487c80",
            "iso_checksum_type": "sha256",
            "memory": "1024",
            "mirror": "http://releases.ubuntu.com",
            "ssh_timeout": "60m",
	    "vsphere_cluster": " ",
	    "vsphere_datacenter": " ",
            "vsphere_datastore": " ",
            "vsphere_host": " ",
            "vsphere_username": " ",
            "vsphere_password": " ",
            "vsphere_vm_name": " ",
            "vsphere_disk_mode": " ",
            "vsphere_vm_folder": " ",
	    "vsphere_vm_network": " "
    }
}
